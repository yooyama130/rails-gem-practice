<h1>本の一覧</h1>
<table>
  <tr>
    <th>ID</th>
    <th>ユーザーID</th>
    <th>タイトル</th>
    <th>紹介文</th>
    <th>タグ</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td><%= book.user_id %></td>
      <td><%= book.title %></td>
      <td><%= book.introduction %></td>
      <td><%= book.tag_list %></td>
      <td><%= link_to "削除する", book_path(book.id), method: :delete %></td>
    </tr>
  <% end %>
</table>
